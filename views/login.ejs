<% include header %>

<div class="container my-4" >
    <div class="row">
        <div class="col-sm-1 col-xl-3">
            &nbsp;
        </div>
        <form class="col-sm-9 col-xl-6">
            <h1 class="title">RentalLog</h1>

            <div class="form-group">
                <label for="email">Email cím</label>
                <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Email cím">
            </div>

            <div class="form-group">
                <label for="password">Jelszó</label>
                <input type="password" name="password" class="form-control" id="password" aria-describedby="emailHelp" placeholder="Jelszó">
            </div>

            <div class="alert alert-light">
                <a class="alert-link" href="/forgotPassW">Elfelejtett jelszó</a>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-info mr-sm-2">Bejelentkezés</button>

                <a href="/register" class="btn btn-info mr-sm-2">Regisztráció</a>
            </div>
        </form>
    </div>
</div>

