<% include header %>

    <div class="container my-4" >
        <div class="row">
            <div class="col-sm-3">
                &nbsp;
            </div>
            <form class="col-sm-6 loginBox" >
                <h1 class="title">Regisztráció</h1>

                <div class="form-group">
                    <label for="name">Teljes név</label>
                    <input type="text" name="name" class="form-control" id="name" placeholder="Teljes név">
                </div>

                <div class="form-group">
                    <label for="email">Email cím</label>
                    <input type="email" name="email" class="form-control" id="email" placeholder="Email cím">
                </div>

                <div class="form-group">
                    <label for="password">Jelszó</label>
                    <input type="password" name="password" class="form-control" id="password" placeholder="Jelszó">
                </div>

                <div class="form-group">
                    <label for="password2">Jelszó megerősítése</label>
                    <input type="password" name="password2" class="form-control" id="password2" placeholder="Jelszó">
                </div>

                <div class="my-2">
                    <button type="submit" class="btn btn-success mr-sm-2">Regisztráció</button>
                    <a href="/login" class="btn btn-info mr-sm-2">Vissza</a>
                </div>
            </form>
        </div>
    </div>

<% include footer %>