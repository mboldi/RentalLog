<% include header %>
<% include navBar %>

    <div class="container my-4">
        <div class="row">
            <h1>Bérlés adatai <i class="far fa-times-circle red"></i></h1>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="renter">Bérlő</label>
                <input type="name" class="form-control mr-sm-2" id="renter" value="Kiss József" disabled>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="renter_email">Bérlő e-mail címe</label>
                <input type="email" class="form-control mr-sm-2" id="renter_email" value="kissjozsi@kissjozsef.hu" disabled>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3">
                <label>Bérelt eszközök:</label>
            </div>
        </div>

        <div class="container">

            <div class="row">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">Eszköz neve</th>
                        <th scope="col">Érték/db</th>
                        <th scope="col">Bérelt mennyiség(db)</th>
                    </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="col">Sony PMW-320</th>
                            <td scope="col">4 000 000 Ft</td>
                            <td scope="col"><input class="form-control" type="number" placeholder="1" aria-label="quantity" disabled></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="renter">Visszavételezés várható időpontja:</label>
                <input type="date" class="form-control" id="bringBackDate" placeholder="03/02/2019" disabled>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label>A bérlés összértéke: </label>
                <input type="text" class="form-control" id="sumPrice" placeholder="4 000 000 Ft" disabled>
            </div>
        </div>

        <div class="form-row form-inline">
            <a class="btn btn-info mr-sm-2" href="/rent/list">OK</a>
            <a class="btn btn-outline-warning my-2" href="/rent/back/1">Visszavétel</a>
        </div>
    </div>

<% include footer %>>